<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.friends.friends.fragment.AttSpecialAttractionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="@mipmap/bg_attration_lover_head">

            <ImageView
                android:id="@+id/lover_pic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@mipmap/pic_head4_196px" />

            <TextView
                android:id="@+id/lover_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@id/lover_pic"
                android:text="岳呼"
                android:textColor="#878787"
                android:textSize="19sp"

                />

            <TextView
                android:id="@+id/lover_sign"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/lover_name"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@id/lover_pic"
                android:ellipsize="end"
                android:text="今天中午吃什么呢?"
                android:textColor="#cecece"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lover_isattention"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_btn_attraction_fans_h"
                android:gravity="center"
                android:text="关注"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lover_name_notfinish"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:text="未完成"
                        android:textColor="#c9c9c9"
                        android:textSize="16sp" />

                    <ListView
                        android:id="@+id/lover_not_finish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lover_name_notfinish"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/lover_name_notfinish"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="7dp"></ListView>

                    <ImageView
                        android:id="@+id/notification"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/lover_name_notfinish"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_notification" />

                    <ListView
                        android:id="@+id/lover_finished"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/lover_not_finish"
                        android:layout_below="@+id/lover_name_finished"
                        android:layout_marginTop="10dp"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="7dp"></ListView>

                    <TextView
                        android:id="@+id/lover_name_finished"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/lover_name_notfinish"
                        android:layout_below="@id/lover_not_finish"
                        android:layout_marginTop="10dp"
                        android:text="已完成"
                        android:textColor="#c9c9c9"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/encourage"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/lover_name_finished"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_encourage" />

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
