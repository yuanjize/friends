<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="#fdfdfd"
        card_view:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/hot_user_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@mipmap/pic_head4_196px" />

            <TextView

                android:id="@+id/hot_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/hot_user_head"
                android:text="有朋"
                android:textColor="#8b8b8b"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/hot_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/hot_username"
                android:layout_below="@id/hot_username"
                android:layout_marginTop="2dp"
                android:text="#坚持跑步#"
                android:textColor="#8ecfac"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hot_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/hot_username"
                android:layout_marginRight="4dp"
                android:text="1月3日"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/insistDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/hot_date"
                android:layout_alignTop="@id/hot_sign_in"
                android:text="已坚持3天"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/descrip_pic"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_below="@+id/hot_user_head"
                android:layout_marginTop="10dp"
                android:src="@mipmap/pic_dynamic_detail" />

            <TextView
                android:id="@+id/descrip_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descrip_pic"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:text="今天5公里，加油！！"
                android:textColor="#8b8b8b"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/hot_group_head"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@id/descrip_word"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:src="@mipmap/pic_head4_196px" />

            <TextView

                android:id="@+id/hot_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/hot_group_head"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/hot_group_head"
                android:text="悦跑团"
                android:textColor="#8ecfac"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/hot_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/hot_group_head"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="7dp"
                android:text="12"
                android:textColor="#8ecfac"
                android:textSize="17sp" />

            <TextView

                android:id="@+id/hot_approve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/hot_group_head"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp"
                android:layout_toLeftOf="@id/hot_comment"
                android:text="23"
                android:textColor="#8ecfac"
                android:textSize="17sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout><!-- From: file:/F:/Friends/app/src/main/res/layout/hot_item.xml -->